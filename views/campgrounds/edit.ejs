<% layout('layouts/boilerplates') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="validated-form"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input value="<%= campground.title %>" type="text" id="title" name="campground[title]" required
                        class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input value="<%= campground.location %>" type="text" id="title" name="campground[location]"
                        required class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-1">
                    <label for="price" class="form-lable">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-lable">$</span>
                        <input value="<%= campground.price %>" id="price" type="text" class="form-control"
                            aria-label="price" aria-describedby="price-lable" placeholder="0.00"
                            name="campground[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="description" id="description" style="height: 100px"
                        name="campground[description]" required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <label for="description"> Description</label>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Add images</label>
                    <input class="form-control" type="file" id="img" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img, i)=> { %>
                        <img class="img-thumbnail" src="<%=img.thumb%>">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="delete[]" value="<%= img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>
                        <% }) %>
                </div>
                <button type="submit" class="btn btn-info">Save alterations</button>
            </form>
            <div class="mt-3">
                <a class="btn btn-secondary" href="/campgrounds/<%= campground._id%>">Back</a>
            </div>
        </div>
    </div>