<% layout('layouts/boilerplates') %>

    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 col-lg-4 offset-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">New Campground</h5>
                    <form action="/campgrounds" method="post" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-lable">Title</label>
                            <input type="text" id="title" name="campground[title]" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-lable">Location</label>
                            <input type="text" id="location" name="campground[location]" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-1">
                            <label for="price" class="form-lable">Price</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="price-lable">$</span>
                                <input id="price" type="text" class="form-control" aria-label="price"
                                    aria-describedby="price-lable" placeholder="0.00" name="campground[price]" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" placeholder="description" id="description"
                                style="height: 100px" name="campground[description]" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <label for="description"> Description</label>
                        </div>

                        <div class="mb-3">
                            <label for="img" class="form-label">Add images</label>
                            <input class="form-control" type="file" id="img" name="image" multiple>
                        </div>


                        <button type="submit" class="btn btn-success">Add campground</button>
                    </form>
                    <div class="mt-3 d-grid gap-*">
                        <a class="btn btn-secondary" href="/campgrounds">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>